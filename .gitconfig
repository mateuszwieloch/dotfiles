[user]
	name = <NAME>
	email = <EMAIL>
[push]
	default = simple
[core]
  editor = vim
[alias]
  st     =   status
  ci     =   commit
  cim    =   commit -m
  br     =   branch
  co     =   checkout
  df     =   diff
  lg     =   log -p
  l      =   "!source ~/.githelpers && pretty_git_log"
  la     =   "!source ~/.githelpers && pretty_git_log_a"
  me     =   "!source ~/.githelpers && pretty_git_log --author=Mateusz"
  h      =   "!source ~/.githelpers && show_git_head"
  lp     =   log --pretty="format:'%h %ad | %an - %s%d'" --date=short
  lgs    =   log --stat
  ls     =   ls-files
  pr     =   pull --rebase
  aa     =   add --all
  amend  =   commit --amend
